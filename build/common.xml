<?xml version="1.0" encoding="UTF-8"?>
<project name="common-build">
    <dirname property="common-build.basedir" file="${ant.file.common-build}"/>
    <property name="rootdir" location="${common-build.basedir}/.."/>
    <property file="${rootdir}/local.properties"/>

    <!-- Uncomment the following property if no tests compilation is needed -->
    <!--
    <property name="skip.tests" value="true"/>
     -->

    <!-- Compiler options -->

    <property name="compiler.debug" value="on"/>
    <property name="compiler.generate.no.warnings" value="off"/>
    <property name="compiler.args" value=""/>
    <property name="compiler.max.memory" value="700m"/>
    <patternset id="ignored.files">
        <exclude name="**/CVS/**"/>
        <exclude name="**/SCCS/**"/>
        <exclude name="**/RCS/**"/>
        <exclude name="**/rcs/**"/>
        <exclude name="**/.DS_Store/**"/>
        <exclude name="**/.svn/**"/>
        <exclude name="**/.pyc/**"/>
        <exclude name="**/.pyo/**"/>
        <exclude name="**/*.pyc/**"/>
        <exclude name="**/*.pyo/**"/>
        <exclude name="**/.git/**"/>
        <exclude name="**/*.hprof/**"/>
        <exclude name="**/_svn/**"/>
        <exclude name="**/.hg/**"/>
        <exclude name="**/*.lib/**"/>
        <exclude name="**/*~/**"/>
        <exclude name="**/__pycache__/**"/>
        <exclude name="**/.bundle/**"/>
        <exclude name="**/*.rbc/**"/>
        <exclude name="**/*.orig/**"/>
    </patternset>
    <patternset id="library.patterns">
        <include name="*.war"/>
        <include name="*.ear"/>
        <include name="*.apk"/>
        <include name="*.zip"/>
        <include name="*.swc"/>
        <include name="*.ane"/>
        <include name="*.egg"/>
        <include name="*.jar"/>
    </patternset>
    <patternset id="compiler.resources">
        <exclude name="**/?*.java"/>
        <exclude name="**/?*.form"/>
        <exclude name="**/?*.class"/>
        <exclude name="**/?*.groovy"/>
        <exclude name="**/?*.scala"/>
        <exclude name="**/?*.flex"/>
        <exclude name="**/?*.kt"/>
        <exclude name="**/?*.clj"/>
    </patternset>

    <!-- JDK definitions -->

    <property name="project.jdk.bin" location="${project.jdk.home}/bin"/>
    <property name="jdk.home" location="${project.jdk.home}"/>
    <property name="jdk.bin" location="${project.jdk.bin}"/>
    <property name="java8.lib" location="${jdk.home}/jre/lib"/>

    <property name="javac2.instrumentation.includeJavaRuntime" value="false"/>

    <path id="idea135.classpath">
        <fileset dir="${rootdir}/intellij-lib/intellij/AI-135.1653844">
            <include name="*.jar"/>
        </fileset>
    </path>
    <path id="idea140.classpath">
        <fileset dir="${rootdir}/intellij-lib/intellij/IC-140.2285.5">
            <include name="*.jar"/>
        </fileset>
    </path>
    <path id="idea150.classpath">
        <fileset dir="${rootdir}/intellij-lib/intellij/IC-143.381.42">
            <include name="*.jar"/>
        </fileset>
    </path>
    <path id="idea160.classpath">
        <fileset dir="${rootdir}/intellij-lib/intellij/IC-144.3357.4">
            <include name="*.jar"/>
        </fileset>
    </path>
    <path id="idea163.classpath">
        <fileset dir="${rootdir}/intellij-lib/intellij/IC-163.5219.11">
            <include name="*.jar"/>
        </fileset>
    </path>
    <path id="unittest.classpath">
      <fileset dir="${rootdir}/lib">
        <include name="junit/4.12/junit-4.12.jar"/>
        <include name="junit/4.12/hamcrest-core-1.3.jar"/>
        <include name="mockito/1.9.5/mockito-all-1.9.5.jar"/>
      </fileset>
    </path>
    <path id="unittest-runtime.classpath">
        <fileset dir="${rootdir}/lib">
            <include name="picocontainer/1.2/picocontainer.jar"/>
            <include name="trove4j/trove4j.jar"/>
        </fileset>
    </path>

    <property name="idea.lowest.classpath" value="idea135.classpath"/>

    <property name="project.jdk.classpath" value="jdk.classpath"/>


    <!-- Project Libraries -->


    <!-- Global Libraries -->
    <!-- Register Custom Compiler Taskdefs -->
    <property name="javac2-135.home" value="${rootdir}/intellij-lib/intellij/AI-135.1653844"/>
    <path id="javac2-135.classpath">
        <pathelement location="${javac2-135.home}/javac2.jar"/>
        <pathelement location="${javac2-135.home}/jdom.jar"/>
        <pathelement location="${javac2-135.home}/asm-all.jar"/>
        <pathelement location="${javac2-135.home}/jgoodies-forms.jar"/>
    </path>
    <property name="javac2-140.home" value="${rootdir}/intellij-lib/intellij/IC-140.2285.5"/>
    <path id="javac2-140.classpath">
        <pathelement location="${javac2-140.home}/javac2.jar"/>
        <pathelement location="${javac2-140.home}/jdom.jar"/>
        <pathelement location="${javac2-140.home}/asm-all.jar"/>
        <pathelement location="${javac2-140.home}/jgoodies-forms.jar"/>
    </path>
    <property name="javac2-150.home" value="${rootdir}/intellij-lib/intellij/IC-143.381.42"/>
    <path id="javac2-150.classpath">
        <pathelement location="${javac2-150.home}/javac2.jar"/>
        <pathelement location="${javac2-150.home}/jdom.jar"/>
        <pathelement location="${javac2-150.home}/asm-all.jar"/>
        <pathelement location="${javac2-150.home}/jgoodies-forms.jar"/>
    </path>
    <property name="javac2-160.home" value="${rootdir}/intellij-lib/intellij/IC-144.3357.4"/>
    <path id="javac2-160.classpath">
        <pathelement location="${javac2-160.home}/javac2.jar"/>
        <pathelement location="${javac2-160.home}/jdom.jar"/>
        <pathelement location="${javac2-160.home}/asm-all.jar"/>
        <pathelement location="${javac2-160.home}/jgoodies-forms.jar"/>
    </path>
    <property name="javac2-163.home" value="${rootdir}/intellij-lib/intellij/IC-163.5219.11"/>
    <path id="javac2-163.classpath">
        <pathelement location="${javac2-163.home}/javac2.jar"/>
        <pathelement location="${javac2-163.home}/jdom.jar"/>
        <pathelement location="${javac2-163.home}/asm-all.jar"/>
        <pathelement location="${javac2-163.home}/jgoodies-forms.jar"/>
    </path>
    <target name="register.custom.compilers">
        <taskdef name="javac2-135" classname="com.intellij.ant.Javac2" classpathref="javac2-135.classpath"/>
        <taskdef name="javac2-140" classname="com.intellij.ant.Javac2" classpathref="javac2-140.classpath"/>
        <taskdef name="javac2-150" classname="com.intellij.ant.Javac2" classpathref="javac2-150.classpath"/>
        <taskdef name="javac2-160" classname="com.intellij.ant.Javac2" classpathref="javac2-160.classpath"/>
        <taskdef name="javac2-163" classname="com.intellij.ant.Javac2" classpathref="javac2-163.classpath"/>
        <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions"
                 classpathref="javac2-163.classpath"/>
    </target>

    <property name="all.compiler.args" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>

    <path id="bootclasspath.6">
        <!-- Paths to be included in compilation bootclasspath for JDK 1.6 -->
        <fileset dir="${java6.lib}">
            <include name="jce.jar"/>
            <include name="jsse.jar"/>
            <include name="rt.jar"/>
        </fileset>
    </path>

    <path id="bootclasspath.8">
        <!-- Paths to be included in compilation bootclasspath for JDK 1.8 -->
        <fileset dir="${java8.lib}">
            <include name="jce.jar"/>
            <include name="jsse.jar"/>
            <include name="rt.jar"/>
        </fileset>
    </path>

    <patternset id="excluded.from">
        <patternset refid="ignored.files"/>
    </patternset>

    <patternset id="excluded.from.compilation">
        <patternset refid="excluded.from"/>
    </patternset>

</project>

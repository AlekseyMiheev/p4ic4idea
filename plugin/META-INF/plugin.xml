<idea-plugin version="2">
    <name>Perforce IDEA Community Integration</name>
    <id>PerforceIC</id>
    <version>0.9.5</version>
    <idea-version since-build="IC-135.1286"/>
    <category>VCS Integration</category>
    <change-notes><![CDATA[
       <ol>
         <li><em>0.9.5</em>
           <ol>
